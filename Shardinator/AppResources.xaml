<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ResourceDictionary.MergedDictionaries>
    <!-- Load WinUI resources -->
    <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
    <MaterialToolkitTheme xmlns="using:Uno.Toolkit.UI.Material"
      ColorOverrideSource="ms-appx:///Shardinator/Styles/ColorPaletteOverride.xaml"
      FontOverrideSource="ms-appx:///Shardinator/Styles/MaterialFontsOverride.xaml" />

  </ResourceDictionary.MergedDictionaries>
  <!-- Add resources here -->
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <ImageSource x:Key="Shardinate">ms-appx:///Shardinator/Assets/ShardinateLight.png</ImageSource>
    </ResourceDictionary>

    <ResourceDictionary x:Key="Dark">
      <ImageSource x:Key="Shardinate">ms-appx:///Shardinator/Assets/ShardinateDark.png</ImageSource>
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
