<Page x:Class="Shardinator.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Shardinator.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}"
      xmlns:uer="using:Uno.Extensions.Reactive.UI">

  <Grid utu:SafeArea.Insets="VisibleBounds">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Button Grid.Row="0" Content="Shardinate!" Command="{Binding ShardinateCommand}" HorizontalAlignment="Center" Margin="10"/>
    <ListView Grid.Row="1" ItemsSource="{Binding Images}" Margin="10" MaxWidth="700">
      <ListView.ItemTemplate>
        <DataTemplate>
          <Grid Margin="5">
            <Grid.ColumnDefinitions>
              <ColumnDefinition MaxWidth="150"/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" CornerRadius="0,10,0,10">
              <Grid.Shadow>
                <ThemeShadow/>
              </Grid.Shadow>
              <Image Source="{Binding PreviewPath}" MaxHeight="150" MaxWidth="150" Stretch="UniformToFill" />
            </Grid>

            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
              <TextBlock Text="{Binding Name}" TextWrapping="WrapWholeWords"/>
              <TextBlock Text="{Binding CreationDate}" Margin="0,10"/>
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</Page>
